<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/propertyListFragment">

    <fragment
        android:id="@+id/propertyListFragment"
        android:name="com.openclassrooms.realestatemanager.ui.fragment.PropertyListFragment"
        android:label="@string/toolbar_properties_list"
        tools:layout="@layout/fragment_property_list">
        <action
            android:id="@+id/navigateFromPropertyListToDetails"
            app:destination="@id/propertyDetailsFragment" />
        <action
            android:id="@+id/action_propertyListFragment_to_propertyAddFragment"
            app:destination="@id/propertyAddFragment" />
    </fragment>
    <fragment
        android:id="@+id/currencyConverterFragment"
        android:name="com.openclassrooms.realestatemanager.ui.fragment.CurrencyConverterFragment"
        android:label="@string/toolbar_currency_converter"
        tools:layout="@layout/fragment_currency_converter"/>
    <fragment
        android:id="@+id/propertyDetailsFragment"
        android:name="com.openclassrooms.realestatemanager.ui.fragment.PropertyDetailsFragment"
        android:label="@string/toolbar_property_details" />
    <fragment
        android:id="@+id/propertyAddFragment"
        android:name="com.openclassrooms.realestatemanager.ui.fragment.PropertyAddFragment"
        android:label="@string/toolbar_add_new_property" />

</navigation>